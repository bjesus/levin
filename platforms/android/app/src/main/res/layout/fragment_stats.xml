<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Levin Stats"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/switch_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Seeding"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_torrents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torrents: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_peers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peers: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_download_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_upload_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_total_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Down: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_total_uploaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Up: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_disk_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disk Usage: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_disk_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disk Budget: --"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
